#include <Led_Blinking_877.h>

void main()
{

   setup_psp(PSP_DISABLED);
   setup_timer_1(T1_DISABLED);
   setup_timer_2(T2_DISABLED, 0, 1);
   setup_adc_ports(NO_ANALOGS);
   setup_adc(ADC_OFF);
   setup_CCP1(CCP_OFF);
   setup_CCP2(CCP_OFF);
   
   set_tris_b(0x00);
   
   output_b(0x00);

   while(TRUE)
   {
      output_high(pin_b0);
      delay_ms(400);
      output_low(pin_b0);
      delay_ms(400);
   }

}
